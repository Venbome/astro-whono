---
import BaseLayout from './BaseLayout.astro';
import { formatISODate } from '../utils/format';

const {
  entry,
  Content,
  typeLabel
} = Astro.props;

const tags = entry?.data?.tags ?? [];
const firstTag = tags[0];
const defaultImage = '/og.svg';
const coverImage = entry?.data?.cover ?? null;
const ogImage = coverImage ?? defaultImage;
const description = entry?.data?.description ?? toExcerpt(entry?.body ?? '');

function toExcerpt(text: string, max = 160) {
  const clean = text
    .replace(/```[\s\S]*?```/g, ' ')
    .replace(/`[^`]*`/g, ' ')
    .replace(/!\[[^\]]*]\([^)]+\)/g, ' ')
    .replace(/\[([^\]]+)]\([^)]+\)/g, '$1')
    .replace(/[#>*_~-]+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim();
  return clean.length > max ? `${clean.slice(0, max)}…` : clean;
}
---

<BaseLayout
  title={entry.data.title}
  description={description}
  image={ogImage}
  ogType="article"
  bodyClass="article-page immersive-page"
>
  <Fragment slot="head">
    <meta property="article:published_time" content={entry.data.date.toISOString()} />
    {tags.map((tag: string) => (
      <meta property="article:tag" content={tag} />
    ))}
  </Fragment>
  <div class="article-header reader-exit-anchor">
    <h1 class="page-title">{entry.data.title}</h1>
    <button
      id="reader-exit"
      class="icon-button reader-exit"
      type="button"
      aria-label="退出阅读模式"
      title="退出阅读模式"
    >
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path
          d="M6 4.5h9.5a2.5 2.5 0 0 1 2.5 2.5V19"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M6 19V4.5M6 19h9.5"
          fill="none"
          stroke="currentColor"
          stroke-width="1.6"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </button>
    <div class="meta-line">
      发布于：{formatISODate(entry.data.date)}
      {typeLabel ? <> · <span class="tag">{typeLabel}</span></> : null}
      {firstTag ? <> · <span class="tag">#{firstTag}</span></> : null}
    </div>
  </div>

  <div class="prose">
    <Content />
  </div>
</BaseLayout>
