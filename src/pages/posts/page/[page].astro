---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getPublished } from '../../../lib/content';
import { groupByYear, formatMonthDay, formatISODate } from '../../../utils/format';
import { PAGE_SIZE_POSTS } from '../../../../site.config.mjs';

export async function getStaticPaths() {
  const posts = await getPublished('posts', {
    orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  });
  const totalPages = Math.ceil(posts.length / PAGE_SIZE_POSTS);
  if (totalPages <= 1) return [];

  return Array.from({ length: totalPages - 1 }, (_, i) => ({
    params: { page: String(i + 2) }
  }));
}

const currentPage = Number(Astro.params.page);
const posts = await getPublished('posts', {
  orderBy: (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
});
const totalPages = Math.ceil(posts.length / PAGE_SIZE_POSTS);
const start = (currentPage - 1) * PAGE_SIZE_POSTS;
const pagePosts = posts.slice(start, start + PAGE_SIZE_POSTS);
const groups = groupByYear(pagePosts, (p) => p.data.date);

const showPagination = totalPages > 1;
const prevHref = currentPage === 2 ? '/posts/' : `/posts/page/${currentPage - 1}/`;
const nextHref = currentPage < totalPages ? `/posts/page/${currentPage + 1}/` : null;
const pageTitle = `文章归档 · 第 ${currentPage} 页`;
---

<BaseLayout title={pageTitle}>
  <div class="page-header">
    <h1 class="page-title">文章归档</h1>
    <span class="page-subtitle">共 {posts.length} 篇文章 · 第 {currentPage} / {totalPages} 页 · <a href="/posts/rss.xml">RSS</a></span>
  </div>

  {groups.map((g) => (
    <section>
      <h2 class="archive-year">{g.year}</h2>
      <div class="archive-list">
        {g.list.map((post) => (
          <div class="archive-row">
            <div class="archive-title">
              <a href={`/posts/${post.data.slug ?? post.id}/`}>{post.data.title}</a>
            </div>
            <div class="archive-meta">
              <div class="archive-date">
                <span class="archive-date-md">{formatMonthDay(post.data.date)}</span>
                <span class="archive-date-full">{formatISODate(post.data.date)}</span>
              </div>
              {post.data.tags?.[0] ? (
                <div class="archive-tag">#{post.data.tags[0]}</div>
              ) : null}
            </div>
          </div>
        ))}
      </div>
    </section>
  ))}

  {showPagination && (
    <nav class="pagination" aria-label="文章分页">
      <div class="pagination__inner">
        <a class="pagination__link" rel="prev" href={prevHref}>上一页</a>
        {nextHref ? (
          <a class="pagination__link pagination__link--next" rel="next" href={nextHref}>下一页</a>
        ) : null}
      </div>
    </nav>
  )}
</BaseLayout>
